<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_empty_background"
    tools:context="activities.ChampActivity">

    <ProgressBar android:id="@+id/loading_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/detail_champ_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Aatrox"/>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="225dp"
        android:layout_height="410dp"
        android:layout_below="@+id/detail_champ_name"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/linearLayoutVideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/champ_skin0"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:visibility="invisible"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp"/>
            <ImageView
                android:id="@+id/champ_skin1"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp"/>
            <ImageView
                android:id="@+id/champ_skin2"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp2"/>
            <ImageView
                android:id="@+id/champ_skin3"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp3"/>
            <ImageView
                android:id="@+id/champ_skin4"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp4"/>
            <ImageView
                android:id="@+id/champ_skin5"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp"/>
            <ImageView
                android:id="@+id/champ_skin6"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp2"/>
            <ImageView
                android:id="@+id/champ_skin7"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp3"/>
            <ImageView
                android:id="@+id/champ_skin8"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp4"/>
            <ImageView
                android:id="@+id/champ_skin9"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp"/>
            <ImageView
                android:id="@+id/champ_skin10"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp2"/>
            <ImageView
                android:id="@+id/champ_skin11"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp3"/>
            <ImageView
                android:id="@+id/champ_skin12"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp4"/>
            <ImageView
                android:id="@+id/champ_skin13"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp"/>
            <ImageView
                android:id="@+id/champ_skin14"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp2"/>
            <ImageView
                android:id="@+id/champ_skin15"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp3"/>
            <ImageView
                android:id="@+id/champ_skin16"
                android:layout_width="225dp"
                android:layout_height="410dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_skin_temp4"/>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/detail_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/spells_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_divider"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
